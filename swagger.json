{
  "openapi": "3.0.0",
  "info": {
    "title": "Api - Desafio tecnico",
    "description": "API de usuarios e produtos para um desafio tecnico.",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Operações de autenticação"
    },
    {
      "name": "User",
      "description": "Rota para gerenciamento de usuários"
    }
  ],
  "paths": {
    "/auth": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login de usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "exemple@local.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "Senh@123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido"
          },
          "404": {
            "description": "Usuário ou senha inválidos."
          },
          "400": {
            "description": "Erro de validação de dados."
          }
        }
      }
    },
    "/auth/refresh-token": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Atualizar token de acesso",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "example": "12a15bef-293b-4d7c-bddb-d74f38545f73"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token atualizado com sucesso"
          },
          "400": {
            "description": "Refresh Token invalido!"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Inserir Usuário",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Joao"
                  },
                  "email": {
                    "type": "string",
                    "example": "joao@local.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "Senh@123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Erro de validação de dados."
          }
        }
      },
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Obter Usuários",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "example": 1
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "example": 5
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de usuários"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Obter usuário por ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "example": "4c46c68d-36f4-471e-9846-e34a61428bce"
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes do usuário"
          },
          "400": {
            "description": "Erro de validação de dados."
          },
          "404": {
            "description": "Usuário não encontrado."
          }
        }
      },
      "put": {
        "tags": [
          "User"
        ],
        "summary": "Atualizar Usuário",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "example": "3fc75d8d-e2ef-4004-a8d1-935187a7fd51"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Joao"
                  },
                  "password": {
                    "type": "string",
                    "example": "Senh@123"
                  },
                  "email": {
                    "type": "string",
                    "example": "joao@local.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso"
          },
          "400": {
            "description": "Erro de validação de dados."
          },
          "404": {
            "description": "Usuário não encontrado."
          }
        }
      },
      "delete": {
        "tags": [
          "User"
        ],
        "summary": "Deletar Usuário",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "example": "221b7203-2c10-4027-b30f-7e5d74edf57c"
          }
        ],
        "responses": {
          "204": {
            "description": "Usuário deletado com sucesso"
          },
          "400": {
            "description": "Erro de validação de dados."
          },
          "404": {
            "description": "Usuário não encontrado."
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}