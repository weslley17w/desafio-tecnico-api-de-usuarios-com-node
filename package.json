{
  "name": "desafio-tecnico-api-de-usuarios-com-node",
  "main": "build/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --env-file .env src/server.ts",
    "watch": "tsx --watch --env-file .env src/server.ts",
    "start": "node --env-file .env build/server.js",
    "format": "prettier --write .",
    "db:migrate": "tsx --env-file .env ./node_modules/.bin/sequelize-cli db:migrate",
    "db:migration:generate": "tsx --env-file .env ./node_modules/.bin/sequelize-cli migration:generate",
    "db:undo": "tsx --env-file .env ./node_modules/.bin/sequelize-cli db:migrate:undo",
    "db:model": "sequelize-cli model:generate",
    "db:seed": "tsx --env-file .env ./node_modules/.bin/sequelize-cli db:seed:all",
    "db:seed:generate": "tsx --env-file .env ./node_modules/.bin/sequelize-cli seed:generate",
    "db:seed:undo": "tsx --env-file .env ./node_modules/.bin/sequelize-cli db:seed:undo:all",
    "jest:pre:test": "NODE_ENV=test tsx --env-file .env ./node_modules/.bin/sequelize-cli db:migrate",
    "test": "NODE_ENV=test npm run jest:pre:test && node --env-file .env ./node_modules/.bin/jest --runInBand --detectOpenHandles"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.13",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.31.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.6.1",
    "sequelize": "^6.37.7",
    "zod": "^4.0.5"
  }
}