{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
